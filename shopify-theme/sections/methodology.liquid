<section class="section section--dark" style="background: var(--lg-navy); color: white; padding: 72px 20px;">
  <div class="shell" style="max-width: 1200px; margin: 0 auto;">
    <div class="h-eyebrow" style="color: var(--lg-sky); text-transform: uppercase; font-weight: 700;">{{ section.settings.eyebrow }}</div>
    <h2 class="h2" style="color: white; font-size: clamp(24px, 3.2vw, 36px); line-height: 1.2;">{{ section.settings.title }}</h2>

    <div class="grid grid--2" style="display: grid; gap: 24px; grid-template-columns: repeat(2, minmax(0, 1fr)); margin-top: 20px;">
      {% for block in section.blocks %}
        <div class="card--dark card" style="background: rgba(255, 255, 255, 0.06); border: 1px solid rgba(255, 255, 255, 0.18); border-radius: 14px; padding: 24px; color: white;">
          <div class="h3" style="font-weight: 700; margin-bottom: 0.5rem; font-size: 1.2rem;">{{ block.settings.heading }}</div>
          <div class="stack" style="display: flex; flex-direction: column; gap: 10px;">
            {{ block.settings.content }}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="stack" style="margin-top: 18px; text-align: center;">
      <a class="btn btn--primary" href="{{ section.settings.cta_link }}" style="background: var(--lg-sky); color: #002c5a; padding: 12px 18px; border-radius: 8px; font-weight: 700; text-decoration: none;">{{ section.settings.cta_text }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Methodology",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Methodology" },
    { "type": "text", "id": "title", "label": "Title", "default": "Clear phases, tangible outputs" },
    { "type": "text", "id": "cta_text", "label": "CTA Text", "default": "Start with a 30â€‘Minute Strategy Call" },
    { "type": "url", "id": "cta_link", "label": "CTA Link" }
  ],
  "blocks": [
    {
      "type": "phase",
      "name": "Phase",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "richtext", "id": "content", "label": "Content" }
      ]
    }
  ],
  "presets": [{ "name": "Methodology" }]
}
{% endschema %}
