<section class="section" style="background: #f8f9fb; padding: 72px 20px;">
  <div class="shell" style="max-width: 1200px; margin: 0 auto;">
    <div class="h-eyebrow" style="color: var(--lg-sky); text-transform: uppercase; font-weight: 700;">{{ section.settings.eyebrow }}</div>
    <h2 class="h2" style="font-size: clamp(24px, 3.2vw, 36px); line-height: 1.2;">{{ section.settings.title }}</h2>
    <div class="grid grid--3" style="display: grid; gap: 24px; grid-template-columns: repeat(3, minmax(0, 1fr)); margin-top: 18px;">
      {% for block in section.blocks %}
        <div class="card" style="background: white; border: 1px solid #eaecee; border-radius: 14px; padding: 24px;">
          <div class="h3" style="font-weight: 700; margin-bottom: 0.5rem;">{{ block.settings.heading }}</div>
          <p class="lead" style="font-size: 1rem; color: #6b7b8c;">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Client Outcomes",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Client Outcomes" },
    { "type": "text", "id": "title", "label": "Title", "default": "Representative results" }
  ],
  "blocks": [
    {
      "type": "outcome",
      "name": "Outcome",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "textarea", "id": "description", "label": "Description" }
      ]
    }
  ],
  "presets": [{ "name": "Client Outcomes" }]
}
{% endschema %}
