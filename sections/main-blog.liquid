<section class="blog-template" style="padding: 80px 20px; background: #f8f9fb;">
  <div class="shell" style="max-width: 1200px; margin: 0 auto;">
    <header class="blog__header" style="text-align: center; margin-bottom: 60px;">
      <h1 class="h1" style="font-size: clamp(36px, 4vw, 56px); color: #111827; margin-bottom: 16px;">{{ blog.title }}</h1>
      <p style="font-size: 1.25rem; color: #6b7b8c; max-width: 600px; margin: 0 auto;">Expert analysis on the future of aerospace, defense, and government contracting.</p>
    </header>

    <div class="blog__grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 32px;">
      {% for article in blog.articles %}
        <article class="article-card" style="background: white; border-radius: 16px; overflow: hidden; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05); transition: transform 0.2s; border: 1px solid #e5e7eb;">
          {% if article.image %}
            <a href="{{ article.url }}" class="article-card__image" style="display: block; aspect-ratio: 16/9; overflow: hidden;">
              <img src="{{ article.image | image_url: width: 800 }}" loading="lazy" width="800" height="450" alt="{{ article.image.alt }}" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s;">
            </a>
          {% endif %}
          <div class="article-card__content" style="padding: 32px;">
            <div class="article-card__meta" style="font-size: 0.875rem; color: var(--lg-sky); font-weight: 600; text-transform: uppercase; margin-bottom: 12px;">
              {{ article.published_at | time_tag: format: 'date' }}
            </div>
            <h2 class="h3" style="font-size: 1.5rem; margin-bottom: 12px; line-height: 1.3;">
              <a href="{{ article.url }}" style="text-decoration: none; color: #111827;">{{ article.title }}</a>
            </h2>
            <p style="color: #6b7b8c; font-size: 1rem; margin-bottom: 24px; line-height: 1.6;">
              {{ article.excerpt_or_content | strip_html | truncatewords: 25 }}
            </p>
            <a href="{{ article.url }}" style="color: var(--lg-navy); font-weight: 600; text-decoration: none; display: inline-flex; align-items: center;">
              Read Analysis â†’
            </a>
          </div>
        </article>
      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      <div class="pagination" style="margin-top: 60px; text-align: center;">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Blog Grid",
  "settings": [],
  "presets": [{ "name": "Blog Grid" }]
}
{% endschema %}
