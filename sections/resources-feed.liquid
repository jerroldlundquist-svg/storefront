{% schema %}
{
  "name": "Resources Feed",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Latest Research & Insights"
    }
  ],
  "blocks": [
    {
      "type": "resource",
      "name": "Insight/Case Study",
      "settings": [
        {
          "type": "text",
          "id": "category",
          "label": "Category",
          "default": "Case Study"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Accelerating M&A in Dual-Use Technology"
        },
        {
          "type": "textarea",
          "id": "summary",
          "label": "Summary",
          "default": "How a tier-2 supplier navigated regulatory compliance to close a $120M acquisition in 6 months."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Resources Feed",
      "blocks": [
        { "type": "resource" },
        { "type": "resource" }
      ]
    }
  ]
}
{% endschema %}

<section class="py-24 bg-white border-t border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-end mb-12">
      <h2 class="text-3xl font-serif text-gray-900 sm:text-4xl">{{ section.settings.title }}</h2>
      <a href="/blogs/news" class="text-indigo-600 font-semibold hover:text-indigo-500 transition-colors">View All Resources &rarr;</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      {% for block in section.blocks %}
        <div class="group cursor-pointer">
          <div class="flex flex-col h-full border-l-4 border-gray-200 pl-8 transition-colors duration-300 group-hover:border-indigo-600">
            <span class="text-xs font-bold uppercase tracking-widest text-indigo-500 mb-2">{{ block.settings.category }}</span>
            <h3 class="text-2xl font-serif font-bold text-gray-900 mb-4 group-hover:text-indigo-600 transition-colors">{{ block.settings.heading }}</h3>
            <p class="text-gray-600 mb-6 flex-1 italic">
              "{{ block.settings.summary }}"
            </p>
            <a href="{{ block.settings.link | default: '#' }}" class="inline-flex items-center text-gray-900 font-bold hover:gap-2 transition-all">
              Read More 
              <svg class="h-5 w-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
