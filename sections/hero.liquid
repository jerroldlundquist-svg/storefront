<section class="section section--dark" style="padding: 0; position: relative; min-height: 70vh; display: grid; place-items: center; overflow: hidden;">
  <div id="yt-bg" style="position: absolute; inset: 0; overflow: hidden; pointer-events: none;">
    <iframe
      id="yt-hero"
      src="https://www.youtube.com/embed/{{ section.settings.video_id }}?autoplay=1&mute=1&controls=0&loop=1&playlist={{ section.settings.video_id }}&modestbranding=1&playsinline=1&rel=0"
      title="Aviation montage"
      loading="lazy"
      allow="autoplay; encrypted-media; picture-in-picture"
      style="width: 120%; height: 120%; border: 0; position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%); filter: brightness(.55) saturate(1.2);"
    ></iframe>
  </div>

  <div class="shell" style="position: relative; z-index: 2; textAlign: center; maxWidth: 980px; margin: 0 auto; text-align: center;">
    <div class="h-eyebrow" style="color: var(--lg-sky); text-transform: uppercase; font-weight: 700; margin-bottom: 0.5rem; letter-spacing: 0.12em;">{{ section.settings.eyebrow }}</div>
    <h1 class="h1" style="color: var(--lg-white); font-size: clamp(28px, 4vw, 52px); line-height: 1.12; margin: 0.4rem 0 1rem;">{{ section.settings.title }}</h1>
    <p class="lead" style="color: #cfd9e3; font-size: clamp(16px, 1.6vw, 18px);">
      {{ section.settings.subtitle }}
    </p>
    <div class="stack" style="margin-top: 18px; display: flex; gap: 1rem; justify-content: center;">
      {% assign product_1 = all_products[section.settings.cta_product_1] %}
      <a class="btn btn--primary {% if section.settings.cta_direct_1 %}tlg-buy{% endif %}" 
         href="{% if section.settings.cta_direct_1 and product_1 != blank %}/cart/{{ product_1.first_available_variant.id }}:1{% else %}{{ section.settings.cta_link_1 }}{% endif %}" 
         {% if section.settings.cta_direct_1 %}
           data-handle="{{ product_1.handle }}" 
           data-variant="{{ product_1.first_available_variant.id }}"
           data-direct="true"
         {% endif %}
         style="background: var(--lg-sky); color: #002c5a; padding: 12px 18px; border-radius: 8px; font-weight: 700; text-decoration: none;">{{ section.settings.cta_text_1 }}</a>
      
      {% assign product_2 = all_products[section.settings.cta_product_2] %}
      <a class="btn btn--ghost {% if section.settings.cta_direct_2 %}tlg-schedule{% endif %}" 
         href="{% if section.settings.cta_direct_2 and product_2 != blank %}/cart/{{ product_2.first_available_variant.id }}:1{% else %}{{ section.settings.cta_link_2 }}{% endif %}" 
         {% if section.settings.cta_direct_2 %}
           data-handle="{{ product_2.handle }}" 
           data-variant="{{ product_2.first_available_variant.id }}"
           data-direct="true"
         {% endif %}
         style="border: 1px solid rgba(255,255,255,0.4); color: white; padding: 12px 18px; border-radius: 8px; font-weight: 700; text-decoration: none;">{{ section.settings.cta_text_2 }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Video",
  "settings": [
    {
      "type": "text",
      "id": "video_id",
      "label": "YouTube Video ID",
      "default": "k8FabAlf0kI"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "The Lundquist Group"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Strategic Advisory across Aerospace, Defense, Transportation & Technology"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "We guide senior leadership, private equity, and institutional investors through high‑stakes decisions—M&A, operational transformation, market entry, and government programs."
    },
    {
      "type": "text",
      "id": "cta_text_1",
      "label": "CTA 1 Text",
      "default": "Schedule 30‑Minute Strategy Call"
    },
    {
      "type": "url",
      "id": "cta_link_1",
      "label": "CTA 1 Link"
    },
    {
      "type": "checkbox",
      "id": "cta_direct_1",
      "label": "Is Direct Purchase (Upfront Payment)",
      "default": false
    },
    {
      "type": "product",
      "id": "cta_product_1",
      "label": "Product for CTA 1"
    },
    {
      "type": "text",
      "id": "cta_text_2",
      "label": "CTA 2 Text",
      "default": "Explore Services"
    },
    {
      "type": "url",
      "id": "cta_link_2",
      "label": "CTA 2 Link"
    },
    {
      "type": "checkbox",
      "id": "cta_direct_2",
      "label": "Is Direct Schedule (Upfront Payment)",
      "default": false
    },
    {
      "type": "product",
      "id": "cta_product_2",
      "label": "Product for CTA 2"
    }
  ],
  "presets": [
    {
      "name": "Hero Video"
    }
  ]
}
{% endschema %}
