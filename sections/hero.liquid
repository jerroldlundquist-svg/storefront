<section class="section section--dark" style="padding: 0; position: relative; min-height: 70vh; display: grid; place-items: center; overflow: hidden;">
  <div id="yt-bg" style="position: absolute; inset: 0; overflow: hidden; pointer-events: none;">
    <iframe
      id="yt-hero"
      src="https://www.youtube.com/embed/{{ section.settings.video_id }}?autoplay=1&mute=1&controls=0&loop=1&playlist={{ section.settings.video_id }}&modestbranding=1&playsinline=1&rel=0"
      title="Aviation montage"
      loading="lazy"
      allow="autoplay; encrypted-media; picture-in-picture"
      style="width: 120%; height: 120%; border: 0; position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%); filter: brightness(.55) saturate(1.2);"
    ></iframe>
  </div>

  <div class="shell" style="position: relative; z-index: 2; textAlign: center; maxWidth: 980px; margin: 0 auto; text-align: center;">
    <div class="h-eyebrow" style="color: var(--lg-sky); text-transform: uppercase; font-weight: 700; margin-bottom: 0.5rem; letter-spacing: 0.12em;">{{ section.settings.eyebrow }}</div>
    <h1 class="h1" style="color: var(--lg-white); font-size: clamp(28px, 4vw, 52px); line-height: 1.12; margin: 0.4rem 0 1rem;">{{ section.settings.title }}</h1>
    <p class="lead" style="color: #cfd9e3; font-size: clamp(16px, 1.6vw, 18px);">
      {{ section.settings.subtitle }}
    </p>
    <div class="stack" style="margin-top: 18px; display: flex; gap: 1rem; justify-content: center;">
      <a class="btn btn--primary" href="{{ section.settings.cta_link_1 }}" style="background: var(--lg-sky); color: #002c5a; padding: 12px 18px; border-radius: 8px; font-weight: 700; text-decoration: none;">{{ section.settings.cta_text_1 }}</a>
      <a class="btn btn--ghost" href="{{ section.settings.cta_link_2 }}" style="border: 1px solid rgba(255,255,255,0.4); color: white; padding: 12px 18px; border-radius: 8px; font-weight: 700; text-decoration: none;">{{ section.settings.cta_text_2 }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Video",
  "settings": [
    {
      "type": "text",
      "id": "video_id",
      "label": "YouTube Video ID",
      "default": "k8FabAlf0kI"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "The Lundquist Group"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Strategic Advisory across Aerospace, Defense, Transportation & Technology"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "We guide senior leadership, private equity, and institutional investors through high‑stakes decisions—M&A, operational transformation, market entry, and government programs."
    },
    {
      "type": "text",
      "id": "cta_text_1",
      "label": "CTA 1 Text",
      "default": "Schedule 30‑Minute Strategy Call"
    },
    {
      "type": "url",
      "id": "cta_link_1",
      "label": "CTA 1 Link"
    },
    {
      "type": "text",
      "id": "cta_text_2",
      "label": "CTA 2 Text",
      "default": "Explore Services"
    },
    {
      "type": "url",
      "id": "cta_link_2",
      "label": "CTA 2 Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Video"
    }
  ]
}
{% endschema %}
