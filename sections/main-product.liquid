<section class="pt-32 pb-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-2 lg:gap-x-12 lg:items-start">
      <!-- Media/Image (Optional for Consulting, but good for branding) -->
      <div class="flex flex-col-reverse">
        <div class="w-full aspect-w-1 aspect-h-1 rounded-2xl overflow-hidden bg-gray-100 border border-gray-200">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | img_url: '1000x' }}" alt="{{ product.title }}" class="w-full h-full object-center object-cover">
          {% else %}
             <div class="flex items-center justify-center h-full text-indigo-100">
                <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path></svg>
             </div>
          {% endif %}
        </div>
      </div>

      <!-- Product Info -->
      <div class="mt-10 px-4 sm:px-0 sm:mt-16 lg:mt-0">
        <div class="flex flex-col">
          <h1 class="text-4xl font-serif font-bold tracking-tight text-gray-900">{{ product.title }}</h1>
          
          <div class="mt-3">
            <h2 class="sr-only">Product information</h2>
            <p class="text-3xl tracking-tight text-gray-900">{{ product.selected_or_first_available_variant.price | money }}</p>
          </div>

          <div class="mt-6">
            <h3 class="sr-only">Description</h3>
            <div class="text-base text-gray-700 space-y-6">
              {{ product.description }}
            </div>
          </div>

          <div class="mt-10">
             <div class="mt-6 flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
                <button 
                   type="button"
                   id="AddToCart"
                   data-variant="{{ product.selected_or_first_available_variant.id }}"
                   class="flex-1 bg-indigo-600 border border-transparent rounded-xl py-4 px-8 flex items-center justify-center text-base font-bold text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all transform hover:scale-[1.02] active:scale-[0.98] uppercase tracking-widest shadow-lg"
                >
                  Add to Briefing
                </button>
                
                <a 
                  href="/cart/{{ product.selected_or_first_available_variant.id }}:1"
                  class="flex-1 bg-gray-900 border border-transparent rounded-xl py-4 px-8 flex items-center justify-center text-base font-bold text-white hover:bg-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all transform hover:scale-[1.02] active:scale-[0.98] uppercase tracking-widest shadow-lg"
                >
                  Direct Checkout
                </a>
             </div>
          </div>
          
          <!-- Trust Badges -->
          <div class="mt-10 border-t border-gray-200 pt-10">
            <h3 class="text-sm font-medium text-gray-900">Advisory Guarantee</h3>
            <div class="mt-4 prose prose-sm text-gray-500">
              <ul role="list" class="space-y-2">
                <li>Direct access to senior partners</li>
                <li>Comprehensive data-driven discovery</li>
                <li>Encrypted documentation & data rooms</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main Product",
  "settings": []
}
{% endschema %}
