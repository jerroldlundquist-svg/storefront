<footer class="bg-navy-gradient border-t border-border bg-[#0e2a47] text-white">
  <div class="container mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {% comment %} Company Info {% endcomment %}
      <div class="lg:col-span-2">
        <a href="/" class="inline-block mb-4">
          <h3 class="text-xl font-serif font-semibold text-white">
            {{ shop.name }}
          </h3>
        </a>
        <p class="text-slate-300 mb-6 max-w-md">
          Strategic advisory services for senior management, private equity, and investors 
          in Aerospace, Defense, Transportation, and Technology industries.
        </p>
        
        {% comment %} Newsletter Signup {% endcomment %}
        <div class="space-y-3">
          <h4 class="text-sm font-semibold text-white">Stay Informed</h4>
          {% form 'customer', class: 'flex space-x-2 max-w-sm' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input 
              type="email" 
              name="contact[email]"
              placeholder="Enter your email" 
              class="bg-white/10 border-white/20 text-white px-3 py-2 rounded-md flex-1 text-sm"
              required
            >
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 px-4 py-2 rounded-md text-sm font-bold">
              Subscribe
            </button>
          {% endform %}
        </div>
      </div>

      {% comment %} Navigation Links {% endcomment %}
      <div>
        <h4 class="text-sm font-semibold text-white mb-4">Company</h4>
        <nav class="space-y-3">
          {% for link in linklists.footer-company.links %}
            <a href="{{ link.url }}" class="block text-sm text-slate-400 hover:text-blue-400 transition-colors duration-200">
              {{ link.title }}
            </a>
          {% endfor %}
        </nav>
      </div>

      <div>
        <h4 class="text-sm font-semibold text-white mb-4">Resources</h4>
        <nav class="space-y-3">
          {% for link in linklists.footer-resources.links %}
            <a href="{{ link.url }}" class="block text-sm text-slate-400 hover:text-blue-400 transition-colors duration-200">
              {{ link.title }}
            </a>
          {% endfor %}
        </nav>
      </div>
    </div>

    {% comment %} Bottom Section {% endcomment %}
    <div class="border-t border-white/10 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <div class="flex items-center space-x-6">
        <p class="text-sm text-slate-400">
          Â© {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.
        </p>
        <div class="flex items-center space-x-4">
          {% if linklists.footer-legal.links != blank %}
            {% for link in linklists.footer-legal.links %}
              <a href="{{ link.url }}" class="text-xs text-slate-400 hover:text-blue-400 transition-colors duration-200">
                {{ link.title }}
              </a>
            {% endfor %}
          {% else %}
            <a href="/pages/privacy" class="text-xs text-slate-400 hover:text-blue-400 transition-colors duration-200">Privacy Policy</a>
            <a href="/pages/terms" class="text-xs text-slate-400 hover:text-blue-400 transition-colors duration-200">Terms & Conditions</a>
            <a href="/pages/cookies" class="text-xs text-slate-400 hover:text-blue-400 transition-colors duration-200">Cookie Policy</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": []
}
{% endschema %}
