{% schema %}
{
  "name": "Google Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Client Feedback"
    },
    {
      "type": "text",
      "id": "rating_score",
      "label": "Overall Rating",
      "default": "5.0"
    },
    {
      "type": "text",
      "id": "review_count",
      "label": "Total Review Count",
      "default": "42"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review Card",
      "settings": [
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "John D."
        },
        {
          "type": "text",
          "id": "author_initial",
          "label": "Author Initial",
          "default": "J"
        },
        {
          "type": "select",
          "id": "stars",
          "label": "Star Rating",
          "options": [
            { "value": "5", "label": "5 Stars" },
            { "value": "4", "label": "4 Stars" }
          ],
          "default": "5"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default": "2 weeks ago"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Review Text",
          "default": "Exceptional strategic guidance. The team at Lundquist Group helped us navigate a complex M&A process with absolute precision."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Google Reviews",
      "blocks": [
        { "type": "review" },
        { "type": "review" },
        { "type": "review" }
      ]
    }
  ]
}
{% endschema %}

<section class="py-16 bg-white border-t border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <div class="inline-flex items-center justify-center space-x-2 mb-2">
        <span class="text-xl font-bold text-gray-900">{{ section.settings.rating_score }}</span>
        <div class="flex text-yellow-400">
          {% for i in (1..5) %}
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
          {% endfor %}
        </div>
      </div>
      <h2 class="text-2xl font-serif text-gray-900">{{ section.settings.title }}</h2>
      <div class="flex items-center justify-center mt-2 space-x-1">
        <img src="https://upload.wikimedia.org/wikipedia/commons/2/2f/Google_2015_logo.svg" alt="Google" class="h-6 w-auto opacity-90">
        <span class="text-sm text-gray-500">Rating based on {{ section.settings.review_count }} verified reviews</span>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        <div class="bg-white p-6 rounded-xl shadow-[0_2px_8px_rgba(0,0,0,0.08)] border border-gray-100 h-full flex flex-col">
          <div class="flex items-center mb-4">
            <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-700 font-bold text-lg mr-3">
              {{ block.settings.author_initial }}
            </div>
            <div>
              <div class="font-bold text-gray-900 text-sm">{{ block.settings.author_name }}</div>
              <div class="text-xs text-gray-500 flex items-center">
                {{ block.settings.date }}
                <svg class="w-3 h-3 ml-1 text-blue-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              </div>
            </div>
          </div>
          <div class="flex text-yellow-400 mb-3">
            {% for i in (1..block.settings.stars) %}
              <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
            {% endfor %}
          </div>
          <p class="text-gray-600 text-sm leading-relaxed flex-1">"{{ block.settings.text }}"</p>
          <div class="mt-4 pt-4 border-t border-gray-50">
             <img src="https://upload.wikimedia.org/wikipedia/commons/2/2f/Google_2015_logo.svg" alt="Google" class="h-4 w-auto opacity-50 grayscale">
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
