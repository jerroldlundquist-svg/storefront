{% schema %}
{
  "name": "Service Comparison",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Compare Our Advisory Tiers"
    },
    {
      "type": "product",
      "id": "product_1",
      "label": "Executive Tier Product"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Capital Tier Product"
    },
    {
      "type": "product",
      "id": "product_3",
      "label": "Operational Tier Product"
    }
  ],
  "presets": [
    {
      "name": "Service Comparison"
    }
  ]
}
{% endschema %}

{%- assign p1 = all_products[section.settings.product_1] -%}
{%- assign p2 = all_products[section.settings.product_2] -%}
{%- assign p3 = all_products[section.settings.product_3] -%}

<section class="py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-serif text-gray-900 sm:text-4xl mb-4">{{ section.settings.title }}</h2>
      <p class="text-lg text-gray-600">Selecting the right level of engagement for your mission objectives.</p>
    </div>

    <div class="overflow-x-auto">
      <table class="w-full text-left border-collapse bg-white rounded-2xl overflow-hidden shadow-sm border border-gray-200">
        <thead class="bg-gray-900">
          <tr class="text-white">
            <th class="py-6 px-8 text-lg font-serif">Feature</th>
            <th class="py-6 px-8 text-center text-lg font-serif">{{ p1.title | default: "Executive Advisory" }}</th>
            <th class="py-6 px-8 text-center text-lg font-serif">{{ p2.title | default: "Capital Strategy" }}</th>
            <th class="py-6 px-8 text-center text-lg font-serif">{{ p3.title | default: "Operational Scale" }}</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <tr>
            <td class="py-5 px-8 font-medium text-gray-900">Partner Access</td>
            <td class="py-5 px-8 text-center text-gray-600">{{ p1.metafields.custom.partner_access | default: "Direct / Unlimited" }}</td>
            <td class="py-5 px-8 text-center text-gray-600">{{ p2.metafields.custom.partner_access | default: "Scheduled Sessions" }}</td>
            <td class="py-5 px-8 text-center text-gray-600">{{ p3.metafields.custom.partner_access | default: "Project Based" }}</td>
          </tr>
          <tr>
            <td class="py-5 px-8 font-medium text-gray-900">Strategic Roadmap</td>
            <td class="py-5 px-8 text-center text-indigo-600 font-bold">{{ p1.metafields.custom.roadmap_type | default: "Comprehensive" }}</td>
            <td class="py-5 px-8 text-center text-indigo-600 font-bold">{{ p2.metafields.custom.roadmap_type | default: "Execution Focused" }}</td>
            <td class="py-5 px-8 text-center text-gray-600">{{ p3.metafields.custom.roadmap_type | default: "Component Based" }}</td>
          </tr>
          <tr>
            <td class="py-5 px-8 font-medium text-gray-900">Analysis Depth</td>
            <td class="py-5 px-8 text-center text-gray-600">{{ p1.metafields.custom.analysis_depth | default: "Multi-Domain" }}</td>
            <td class="py-5 px-8 text-center text-gray-600">{{ p2.metafields.custom.analysis_depth | default: "Specific Domain" }}</td>
            <td class="py-5 px-8 text-center text-gray-600">{{ p3.metafields.custom.analysis_depth | default: "Technical Only" }}</td>
          </tr>
          <tr>
            <td class="py-5 px-8 font-medium text-gray-900">Briefing Cadence</td>
            <td class="py-5 px-8 text-center text-gray-600">{{ p1.metafields.custom.briefing_cadence | default: "Weekly" }}</td>
            <td class="py-5 px-8 text-center text-gray-600">{{ p2.metafields.custom.briefing_cadence | default: "Bi-Weekly" }}</td>
            <td class="py-5 px-8 text-center text-gray-600">{{ p3.metafields.custom.briefing_cadence | default: "Milestone Based" }}</td>
          </tr>
          <tr class="bg-gray-50/50">
            <td class="py-8 px-8 font-serif text-lg">Investment</td>
            <td class="py-8 px-8 text-center font-bold text-gray-900">{{ p1.price | money_with_currency | default: "$25,000+" }}</td>
            <td class="py-8 px-8 text-center font-bold text-gray-900">{{ p2.price | money_with_currency | default: "$15,000+" }}</td>
            <td class="py-8 px-8 text-center font-bold text-gray-900">{{ p3.price | money_with_currency | default: "$10,000+" }}</td>
          </tr>
        </tbody>
      </table>
    </div>
    
    <div class="mt-12 text-center text-sm text-gray-500 italic">
      * All prices are introductory and subject to custom scoping during the initial discovery session.
    </div>
  </div>
</section>
