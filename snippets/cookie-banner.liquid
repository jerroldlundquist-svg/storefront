<div id="CookieBanner" class="fixed bottom-0 left-0 right-0 z-[100] transform transition-transform duration-500 translate-y-full px-4 pb-4 sm:px-6 sm:pb-6">
  <div class="max-w-7xl mx-auto bg-gray-900 text-white rounded-2xl shadow-2xl border border-white/10 p-6 flex flex-col md:flex-row items-center justify-between gap-6">
    <div class="flex-1">
      <h4 class="text-lg font-bold mb-2">Cookie Privacy & Compliance</h4>
      <p class="text-gray-400 text-sm leading-relaxed">
        We use essential cookies to ensure your advisory briefing and secure checkout process function correctly. By continuing to navigate our site, you agree to our <a href="/pages/privacy" class="text-indigo-400 hover:text-indigo-300 underline">Privacy Policy</a> and <a href="/pages/cookies" class="text-indigo-400 hover:text-indigo-300 underline">Cookie Usage</a>.
      </p>
    </div>
    <div class="flex items-center space-x-4 flex-shrink-0">
      <button id="AcceptCookies" class="bg-indigo-600 text-white px-8 py-3 rounded-lg font-bold hover:bg-indigo-700 transition-colors uppercase tracking-widest text-xs">
        Accept Terms
      </button>
      <button id="DismissBanner" class="text-gray-400 hover:text-white text-sm">
        Dismiss
      </button>
    </div>
  </div>
</div>

<script>
  (function() {
    const banner = document.getElementById('CookieBanner');
    const acceptBtn = document.getElementById('AcceptCookies');
    const dismissBtn = document.getElementById('DismissBanner');

    if (!localStorage.getItem('cookies-accepted')) {
      setTimeout(() => {
        banner.classList.remove('translate-y-full');
      }, 1000);
    }

    const closeBanner = () => {
      banner.classList.add('translate-y-full');
    };

    acceptBtn.addEventListener('click', () => {
      localStorage.setItem('cookies-accepted', 'true');
      closeBanner();
    });

    dismissBtn.addEventListener('click', closeBanner);
  })();
</script>
