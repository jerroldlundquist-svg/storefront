<div id="CookieBanner" class="fixed bottom-0 left-0 right-0 z-[100] transform transition-transform duration-500 translate-y-full px-4 pb-4 sm:px-6 sm:pb-6">
  <div class="max-w-7xl mx-auto bg-white text-gray-900 rounded-2xl shadow-2xl border border-gray-200 p-6 flex flex-col md:flex-row items-center justify-between gap-6">
    <div class="flex-1">
      <h4 class="text-lg font-bold text-gray-900 mb-2 font-serif">Cookie Privacy & Compliance</h4>
      <p class="text-gray-600 text-sm leading-relaxed">
        We use essential cookies to ensure your advisory briefing and secure checkout process function correctly. By continuing to navigate our site, you agree to our <a href="/pages/privacy" class="text-indigo-600 hover:text-indigo-700 font-bold underline">Privacy Policy</a> and <a href="/pages/cookies" class="text-indigo-600 hover:text-indigo-700 font-bold underline">Cookie Usage</a>.
      </p>
    </div>
    <div class="flex items-center space-x-4 flex-shrink-0">
      <button id="AcceptCookies" class="bg-indigo-600 text-white px-8 py-3 rounded-xl font-bold hover:bg-indigo-700 transition-all shadow-md active:scale-95 uppercase tracking-widest text-xs">
        Accept Terms
      </button>
      <button id="DismissBanner" class="text-gray-500 hover:text-gray-900 font-medium text-sm transition-colors">
        Dismiss
      </button>
    </div>
  </div>
</div>

<script>
  (function() {
    const banner = document.getElementById('CookieBanner');
    const acceptBtn = document.getElementById('AcceptCookies');
    const dismissBtn = document.getElementById('DismissBanner');

    if (!localStorage.getItem('cookies-accepted')) {
      setTimeout(() => {
        banner.classList.remove('translate-y-full');
      }, 1000);
    }

    const closeBanner = () => {
      banner.classList.add('translate-y-full');
    };

    acceptBtn.addEventListener('click', () => {
      localStorage.setItem('cookies-accepted', 'true');
      closeBanner();
    });

    dismissBtn.addEventListener('click', closeBanner);
  })();
</script>
