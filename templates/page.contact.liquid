<section class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      
      <!-- Contact Info -->
      <div>
        <h1 class="text-4xl font-serif font-bold text-gray-900 mb-6">Get in Touch</h1>
        <p class="text-xl text-gray-600 mb-12">
          Reach out to discuss strategic advisory, M&A due diligence, or operational transformation projects. Our partners respond to all qualified inquiries within 24 hours.
        </p>

        <div class="space-y-8">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-12 w-12 rounded-lg bg-indigo-50 text-indigo-600 border border-indigo-100">
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-bold text-gray-900">Email</h3>
              <p class="text-gray-600">{{ shop.email }}</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-12 w-12 rounded-lg bg-indigo-50 text-indigo-600 border border-indigo-100">
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-bold text-gray-900">Phone</h3>
              <p class="text-gray-600">+1 (804) 974-2335</p>
            </div>
          </div>
          
          <div class="p-6 bg-gray-50 rounded-2xl border border-gray-100 mt-12">
            <h4 class="text-sm font-bold uppercase tracking-wider text-gray-900 mb-2">Secure Correspondence</h4>
            <p class="text-xs text-gray-500 leading-relaxed">
              All communications are handled with strict confidentiality. We are accustomed to DDTC, ITAR, and sensitive commercial protocols.
            </p>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-gray-50 p-8 lg:p-12 rounded-3xl border border-gray-100 shadow-sm">
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <div class="p-4 mb-6 bg-green-50 border border-green-200 text-green-700 rounded-lg font-medium">
              Thank you for your message. We will be in touch shortly.
            </div>
          {% endif %}

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <label for="ContactFormName" class="block text-sm font-medium text-gray-900 mb-2">Full Name</label>
              <input type="text" id="ContactFormName" name="contact[name]" class="block w-full rounded-lg border-gray-300 px-4 py-3 text-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" required>
            </div>
            <div>
              <label for="ContactFormEmail" class="block text-sm font-medium text-gray-900 mb-2">Email</label>
              <input type="email" id="ContactFormEmail" name="contact[email]" class="block w-full rounded-lg border-gray-300 px-4 py-3 text-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" required>
            </div>
          </div>

          <div class="mt-6">
            <label for="ContactFormSubject" class="block text-sm font-medium text-gray-900 mb-2">Inquiry Type</label>
            <select id="ContactFormSubject" name="contact[subject]" class="block w-full rounded-lg border-gray-300 px-4 py-3 text-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
              <option>M&A Due Diligence</option>
              <option>Operational Support</option>
              <option>Strategy Consultation</option>
              <option>Other / Custom Project</option>
            </select>
          </div>

          <div class="mt-6">
            <label for="ContactFormMessage" class="block text-sm font-medium text-gray-900 mb-2">Message</label>
            <textarea id="ContactFormMessage" name="contact[body]" rows="4" class="block w-full rounded-lg border-gray-300 px-4 py-3 text-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" required></textarea>
          </div>

          <div class="mt-10">
            <button type="submit" class="w-full bg-gray-900 text-white font-bold py-4 px-6 rounded-lg hover:bg-black transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
              Send Message
            </button>
          </div>
        {% endform %}
      </div>

    </div>
  </div>
</section>
