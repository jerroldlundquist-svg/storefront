<section class="pt-32 pb-24 bg-gray-50 min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-serif font-bold text-gray-900">Your Consultation Briefing</h1>
      <p class="mt-4 text-lg text-gray-600">Review selected services before finalizing your strategic engagement.</p>
    </div>

    {% if cart.item_count > 0 %}
      <div class="lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-start">
        <div class="lg:col-span-7">
          <form action="/cart" method="post" novalidate class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
            <ul role="list" class="divide-y divide-gray-200">
              {% for item in cart.items %}
                <li class="flex py-6 px-6 sm:py-10">
                  <div class="flex-shrink-0">
                    <img src="{{ item.image | img_url: '200x' }}" alt="{{ item.product.title }}" class="w-24 h-24 rounded-lg object-center object-cover bg-gray-100">
                  </div>

                  <div class="ml-4 flex-1 flex flex-col justify-between sm:ml-6">
                    <div class="relative pr-9 sm:grid sm:grid-cols-2 sm:gap-x-6 sm:pr-0">
                      <div>
                        <div class="flex justify-between">
                          <h3 class="text-sm">
                            <a href="{{ item.url }}" class="font-medium text-gray-700 hover:text-indigo-600">
                              {{ item.product.title }}
                            </a>
                          </h3>
                        </div>
                        <div class="mt-1 flex text-sm">
                          <p class="text-gray-500">
                             {{ item.variant.title }}
                          </p>
                        </div>
                        <p class="mt-1 text-sm font-medium text-gray-900">{{ item.price | money }}</p>
                      </div>

                      <div class="mt-4 sm:mt-0 sm:pr-9">
                        <label for="updates_{{ item.id }}" class="sr-only">Quantity, {{ item.product.title }}</label>
                        <select id="updates_{{ item.id }}" name="updates[]" class="max-w-full rounded-md border border-gray-300 py-1.5 text-base leading-5 font-medium text-gray-700 text-left shadow-sm focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                          {% for i in (1..5) %}
                            <option value="{{ i }}" {% if item.quantity == i %}selected{% endif %}>{{ i }}</option>
                          {% endfor %}
                        </select>

                        <div class="absolute top-0 right-0">
                          <a href="/cart/change?line={{ forloop.index }}&quantity=0" class="-m-2 p-2 inline-flex text-gray-400 hover:text-gray-500">
                            <span class="sr-only">Remove</span>
                            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
                          </a>
                        </div>
                      </div>
                    </div>

                    <p class="mt-4 flex text-sm text-gray-700 space-x-2">
                       <svg class="flex-shrink-0 h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20"><path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" /><path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h.01a1 1 0 100-2H10zm3 0a1 1 0 000 2h.01a1 1 0 100-2H13zm-6 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h.01a1 1 0 100-2H10zm3 0a1 1 0 000 2h.01a1 1 0 100-2H13z" clip-rule="evenodd" /></svg>
                       <span>Includes Discovery Strategy</span>
                    </p>
                  </div>
                </li>
              {% endfor %}
            </ul>
          </form>
        </div>

        <!-- Summary -->
        <div class="mt-16 lg:mt-0 lg:col-span-5">
          <div class="bg-gray-900 rounded-2xl p-8 text-white shadow-xl border border-white/10">
            <h2 class="text-lg font-serif font-bold">Briefing Summary</h2>

            <dl class="mt-6 space-y-4">
              <div class="flex items-center justify-between">
                <dt class="text-sm text-gray-400">Subtotal</dt>
                <dd class="text-sm font-medium">{{ cart.total_price | money }}</dd>
              </div>
              <div class="border-t border-white/10 pt-4 flex items-center justify-between">
                <dt class="text-base font-bold">Estimated Total</dt>
                <dd class="text-base font-bold">{{ cart.total_price | money }}</dd>
              </div>
            </dl>

            <div class="mt-8">
               <div class="mb-6">
                  {% render 'fraud-protection' %}
               </div>
               
               <button 
                 type="submit" 
                 name="checkout" 
                 form="cart"
                 id="CartCheckout"
                 class="w-full bg-indigo-600 border border-transparent rounded-md py-4 px-4 text-base font-bold text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-indigo-500 transition-colors uppercase tracking-widest"
               >
                 Confirm & Checkout
               </button>
            </div>
            
            <p class="mt-6 text-center text-xs text-gray-400">
               All transactions are secured and processed within your Shopify Admin back office.
            </p>
          </div>
        </div>
      </div>
    {% else %}
      <div class="text-center py-24 bg-white rounded-2xl border border-dashed border-gray-300">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" /></svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Briefing is empty</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by selecting a strategic service package.</p>
        <div class="mt-6">
          <a href="/#service_grid" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
            View Services
          </a>
        </div>
      </div>
    {% endif %}
  </div>
</section>

<form action="/cart" method="post" id="cart" class="hidden"></form>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const checkoutBtn = document.getElementById("CartCheckout");
    const agreementCheckbox = document.getElementById("service-agreement");
    const cartForm = document.getElementById("cart");

    if (checkoutBtn && agreementCheckbox) {
      // Create a hidden input for the agreement inside the cart form so it gets submitted
      const hiddenAgreement = document.createElement('input');
      hiddenAgreement.type = 'hidden';
      hiddenAgreement.name = 'attributes[Agreed to Advisory Terms]';
      hiddenAgreement.value = 'No';
      cartForm.appendChild(hiddenAgreement);

      const validate = () => {
        if (agreementCheckbox.checked) {
          checkoutBtn.disabled = false;
          checkoutBtn.classList.remove('opacity-50', 'cursor-not-allowed');
          hiddenAgreement.value = 'Yes';
        } else {
          checkoutBtn.disabled = true;
          checkoutBtn.classList.add('opacity-50', 'cursor-not-allowed');
          hiddenAgreement.value = 'No';
        }
      };

      agreementCheckbox.addEventListener('change', validate);
      validate(); // Initial state
    }
  });
</script>
